<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>High Scores</title>
    <script>
        // Fetch data from the Google Visualization API
        function fetchHighScores() {
            const queryURL = 'https://docs.google.com/spreadsheets/d/1cRnAf3hxh2fnwAdBp99_hEWgQKtUx57TSLkYzCZqmzA/gviz/tq?tq=SELECT%20A,%20B,%20C';

            fetch(queryURL)
                .then((response) => response.text())
                .then((data) => {
                    // Extract the JSON part from the response
                    const jsonData = JSON.parse(data.substring(data.indexOf('(') + 1, data.lastIndexOf(')')));
                    
                    // Parse and render the data
                    renderHighScores(jsonData.table.rows);
                })
                .catch((error) => {
                    console.error('Error fetching high scores:', error);
                });
        }

        // Render the high scores into a table
        function renderHighScores(rows) {
            const table = document.getElementById('high-scores-table');
            table.innerHTML = ''; // Clear any existing data

            // Add table headers
            const headerRow = document.createElement('tr');
            headerRow.innerHTML = `
                <th>Player</th>
                <th>Game</th>
                <th>Score</th>
            `;
            table.appendChild(headerRow);

            // Add each row of data
            rows.forEach((row) => {
                const player = row.c[0]?.v || '';
                const game = row.c[1]?.v || '';
                const score = row.c[2]?.v || '';

                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>${player}</td>
                    <td>${game}</td>
                    <td>${score}</td>
                `;
                table.appendChild(tr);
            });
        }

        // Fetch data on load and every 60 seconds
        window.onload = () => {
            fetchHighScores();
            setInterval(fetchHighScores, 60000); // Update every 60 seconds
        };
    </script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            text-align: center;
            background-color: #ffffff;
            color: #000000;
        }

        table {
            margin: 20px auto;
            border-collapse: collapse;
            width: 80%;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        td {
            background-color: #ffffff;
        }
    </style>
</head>
<body>
    <h1>High Scores</h1>
    <table id="high-scores-table"></table>
</body>
</html>
